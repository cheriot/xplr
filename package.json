{
  "name": "xplr",
  "version": "0.0.1",
  "description": "Inspiring travel destinations and the logistics.",
  "private": true,
  "repository": "",
  "main": "server.js",
  "dependencies": {
    "alt": "*",
    "ejs": "^2.3.4",
    "express": "^4.13.3",
    "path": "^0.12.7",
    "react": "*"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.3",
    "babel-loader": "^5.3.2",
    "babel-plugin-typecheck": "^1.2.0",
    "babel-runtime": "^5.8.25",
    "concurrently": "^0.1.1",
    "eslint": "^1.5.1",
    "eslint-plugin-react": "^3.4.2",
    "react-hot-loader": "^1.3.0",
    "react-tools": "*",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.11.0"
  },
  "scripts": {
    "start": "NODE_PATH=\"./app\" ./node_modules/babel/bin/babel-node.js ./server",
    "build-client": "./node_modules/babel/bin/babel-node.js ./node_modules/webpack/bin/webpack.js --verbose --colors --display-error-details --config ./webpack.client.js",
    "hot-client": "./node_modules/babel/bin/babel-node.js ./node_modules/webpack/bin/webpack.js --verbose --colors --display-error-details --config ./webpack.client-hot.js && ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --port 5555 --content-base public --config webpack.client-hot.js",
    "hot": "REACT_HOT='hot' ./node_modules/concurrently/src/main.js --kill-others \"npm run hot-client\" \"npm run start\"",
    "watch-client": "./node_modules/babel/bin/babel-node.js ./node_modules/webpack/bin/webpack.js --verbose --colors --display-error-details --config ./webpack.client.js --watch",
    "watch": "./node_modules/concurrently/src/main.js --kill-others \"npm run watch-client\" \"npm start\""
  },
  "author": "Chris Heriot"
}
